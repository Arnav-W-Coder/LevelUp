{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",                    // <-- required for "paths" to work
    "paths": {
      "@/*": ["./*"]                   // <-- matches your Babel alias '@' -> './'
    },
    "types": ["expo-router"]           // <-- optional, for router typings/autocomplete
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/__mocks__/*",
    "**/__rsc_tests__/*"
  ]
}
